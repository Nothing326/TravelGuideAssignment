<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/tajmahalagra"></ImageView>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:layout_margin="@dimen/margin_medium"
                    android:src="@drawable/ic_bookmark_border_white_24dp"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|bottom"
                    android:layout_margin="@dimen/margin_medium"
                    android:drawableStart="@drawable/ic_star_yellow_24dp"
                    android:text="4.5(21 rating)"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/text_regular"></TextView>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_margin="@dimen/margin_medium"
                    android:text="$99/day"></Button>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/locationName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_regular_3x"
            android:textStyle="bold"
            android:text="The Westeen"
            android:layout_margin="@dimen/margin_small"
            android:layout_below="@+id/cardView"
            >
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_50_off"
            android:layout_below="@+id/cardView"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/margin_small"
            android:textColor="@color/red_color"
            >

        </TextView>
        <TextView
            android:layout_below="@+id/locationName"
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gulshan Circle 2,Dhaka"
            android:layout_margin="@dimen/margin_small"
            >

        </TextView>
        <TextView
            android:layout_below="@+id/locationName"
            android:id="@+id/service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Free wifi . Swimming"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/margin_small"
            >
        </TextView>

    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>

